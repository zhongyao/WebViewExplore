<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hongri.webview.SysSelectionBoxWebViewActivity">

    <com.hongri.webview.copy.widget.ActionWebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.hongri.webview.copy.widget.TextImageLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="50dp"
        android:orientation="vertical"
        android:visibility="gone">

        <com.hongri.webview.copy.widget.SelectedTextView
            android:id="@+id/tv"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/gray"
            android:padding="50dp"
            android:visibility="gone"/>

        <!--<com.hongri.webview.copy.widget.TextImageView
            android:id="@+id/iv"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_margin="50dp"
            android:background="@color/gray"
            android:visibility="gone"/>-->

        <com.hongri.webview.copy.widget.ScanImage
            android:id="@+id/scanIv"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:paddingBottom="100dp"
            android:layout_gravity="top"
            android:background="@color/gray"
            android:src="@drawable/scan"
            android:visibility="gone"/>

    </com.hongri.webview.copy.widget.TextImageLayout>


    <ImageView
        android:id="@+id/topIv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eeddee"
        android:visibility="gone"/>
</FrameLayout>
